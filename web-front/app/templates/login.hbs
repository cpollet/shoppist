<h2>Login</h2>
<div class=" col-md-3">
	{{#if loginFailed}}
		<div class="alert alert-danger">Invalid username or password.</div>
	{{/if}}
	<form role="form" {{action "login" on="submit"}}>
		<div class="input-group">
		<span class="input-group-addon">
			<span class="glyphicon glyphicon-user inline" aria-hidden="true"></span>
		</span>
			<label class="sr-only" for="username">Username</label>
			{{input value=username type="text" class="form-control" placeholder="Username"}}
		</div>
		<div class="input-group voffset2">
		<span class="input-group-addon">
			<span class="glyphicon glyphicon-lock inline" aria-hidden="true"></span>
		</span>
			<label class="sr-only" for="password">Password</label>
			{{input value=password type="text" class="form-control" placeholder="Password"}}
		</div>
		<div class="input-group btn-toolbar voffset2">
			<button type="submit" class="btn btn-default" {{bind-attr disabled="isProcessing"}}>Submit</button>
		</div>
	</form>
</div>